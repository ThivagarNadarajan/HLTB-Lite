{
	"env": {
		"browser": true,
		"es6": true,
		"jest": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"plugins": ["react"],
	"settings": {
		"react": {
			"pragma": "React",
			"version": "detect"
		}
	},
	"rules": {
		"react/prop-types": 0,
		"linebreak-style": [
			"error",
			"unix"
		],
		"semi": [
			"error",
			"always"
		],
		"quotes": [
			"error",
			"single"
		]
	},
	"parser": "babel-eslint",
	"parserOptions": {
	  "sourceType": "module",
	  "allowImportExportEverywhere": true
	}
}